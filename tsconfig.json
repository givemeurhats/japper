{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
